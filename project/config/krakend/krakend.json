{
  "$schema": "https://www.krakend.io/schema/v2.4/krakend.json",
  "version": 3,
  "endpoints": [
    {
      "endpoint": "/api/v1/service1",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/",
          "method": "GET",
          "encoding": "json",
          "host": [
            "http://service1:8000"
          ]
        }
      ]
    },
    {
      "endpoint": "/api/v1/service1/{path}",
      "method": "GET",
      "output_encoding": "json",
      "input_headers": [
          "Authorization",
          "Accept",
          "Content-Type",
          "Credentials"
      ],
      "extra_config": {
          "auth/validator": {
              "alg": "RS256",
              "jwk_url": "http://keycloak:8080/realms/ukumbi/protocol/openid-connect/certs",
              "issuer": "http://127.0.0.1:8080/realms/ukumbi",
              "operation_debug": true,
              "disable_jwk_security": true
          }
      },
      "backend": [
        {
          "url_pattern": "/{path}",
          "method": "GET",
          "encoding": "json",
          "host": [
            "http://service1:8000"
          ]
        }
      ]
    }
  ]
}